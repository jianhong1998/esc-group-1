{
    "name": "app",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "install:all": "npm i && npm run install:client",
        "install:client": "cd react && npm i",
        "dev": "concurrently \"npm:dev:server\" \"npm:dev:client\"",
        "dev:server": "NODE_ENV=dev PORT=3001 nodemon --exec ts-node src/app.ts",
        "dev:client": "cd react && npm run dev",
        "build": "concurrently \"npm:build:server\" \"npm:build:client\" && npm run build:install",
        "build:server": "tsc && cp .env ./dist",
        "build:client": "cd react && npm run build",
        "build:install": "cp package.json package-lock.json ./dist && cd dist && npm i --only=production",
        "start": "cd dist && npm run start:dist",
        "start:dist": "node --es-module-specifier-resolution=node app.js"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "type": "module",
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/body-parser": "^1.19.2",
        "@types/cors": "^2.8.13",
        "@types/dotenv": "^8.2.0",
        "@types/eslint": "^8.44.2",
        "@types/express": "^4.17.17",
        "@types/helmet": "^4.0.0",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/node": "^20.4.8",
        "eslint": "^8.46.0",
        "nodemon": "^3.0.1",
        "prettier": "^3.0.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.6"
    },
    "dependencies": {
        "axios": "^1.4.0",
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.20.2",
        "cheerio": "^1.0.0-rc.12",
        "concurrently": "^8.2.0",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "helmet": "^7.0.0",
        "jsonwebtoken": "^9.0.1",
        "openai": "^3.3.0"
    }
}
